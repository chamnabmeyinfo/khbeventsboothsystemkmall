<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Redirect to public folder if document root is not set to public
    # This is for cPanel setups where document root is the project root
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ public/$1 [L]
    
    # If document root is already set to public, this won't be needed
    # But it's safe to have for flexibility
</IfModule>

# If accessing root directly, redirect to public
DirectoryIndex public/index.php index.php index.html

