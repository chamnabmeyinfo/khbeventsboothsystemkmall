# Application Configuration
APP_NAME="KHB Booths Booking System"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=kmall_booth
DB_USERNAME=root
DB_PASSWORD=

# Performance & Debugging Configuration
# Set to false to disable debug logging even in development
DEBUG_LOGGING=true

# Upload size limit for floorplan images (in KB, default 100MB = 102400)
UPLOAD_MAX_SIZE_KB=102400

# Cache Configuration
CACHE_DRIVER=file
SESSION_DRIVER=file
QUEUE_CONNECTION=sync

# GitHub Configuration (for deployment)
# Copy this file to .env and fill in your GitHub credentials

# GitHub Username
GITHUB_USERNAME=your_github_username

# GitHub Personal Access Token (PAT)
# Generate one at: https://github.com/settings/tokens
# Required scopes: repo (for private repos) or public_repo (for public repos)
GITHUB_TOKEN=your_github_personal_access_token

# GitHub Repository URL (optional - will use remote if not set)
GITHUB_REPO_URL=https://github.com/chamnabmeyinfo/khbevents-boothsystem-kmall.git

# Use SSH instead of HTTPS (true/false)
# If true, you need to set up SSH keys instead of using token
GITHUB_USE_SSH=false
